<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_marginStart="@dimen/dp_5"
    android:layout_marginEnd="@dimen/dp_5"
    android:layout_marginTop="@dimen/dp_10"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:background="@drawable/recylerview_background_banner"
    android:nestedScrollingEnabled="true"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="25dp"
    android:layout_marginBottom="@dimen/dp_5"
    app:cardElevation="4dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/txtaddtitle">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/question_rescard_background_banner">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivJournalImage1"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:scaleType="centerCrop"
            android:visibility="visible"
            app:layout_constraintEnd_toStartOf="@+id/ivJournalImage2"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/RoundedTopCornersImage" />

        <TextView
            android:id="@+id/txtdate"
            style="@style/CustomHighBold"
            android:layout_width="0dp"
            android:layout_height="38dp"

            android:layout_marginTop="10dp"
            android:background="@drawable/title_background_banner"

            android:backgroundTint="#F5F5F5"

            android:gravity="center"
            android:paddingStart="@dimen/dp_5"
            android:paddingEnd="@dimen/dp_2"
            android:text="Date"
            android:textColor="@color/black"
            android:textSize="@dimen/dp_12"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/ivJournalImage2"
            app:layout_constraintStart_toStartOf="@+id/ivJournalImage2"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivJournalImage2"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"

            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/ivJournalImage1"
            app:layout_constraintTop_toBottomOf="@+id/txtdate"
            app:shapeAppearanceOverlay="@style/RoundedTopCornersImage" />

        <TextView
            android:id="@+id/tvJournalTitle"
            style="@style/CustomHighBold"
            android:layout_width="0dp"
            android:layout_height="18dp"
            android:layout_marginTop="10dp"
            android:paddingStart="@dimen/dp_15"
            android:paddingEnd="@dimen/dp_8"
            app:layout_constraintEnd_toEndOf="@+id/ivJournalImage2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivJournalImage1" />

        <TextView
            android:id="@+id/tvJournalDescription"
            style="@style/CustomLow"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/dp_15"
            android:paddingEnd="@dimen/dp_8"
            android:text=""
            app:layout_constraintEnd_toEndOf="@+id/tvJournalTitle"
            app:layout_constraintStart_toStartOf="@+id/tvJournalTitle"
            app:layout_constraintTop_toBottomOf="@+id/tvJournalTitle" />

        <EditText
            android:id="@+id/tvJournalDate"
            style="@style/CustomLow"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_20"
            android:background="@drawable/button_background_banner_bg"
            android:backgroundTint="#F5F5F5"
            android:drawableEnd="@drawable/baseline_edit_24"
            android:enabled="false"
            android:hint="@string/date"
            android:paddingStart="@dimen/dp_20"
            android:paddingEnd="@dimen/dp_15"
            android:textColorHint="@color/black"
            android:textSize="@dimen/sp_10"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"

            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvJournalDescription"
            app:layout_constraintVertical_bias="1.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>